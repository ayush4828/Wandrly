<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
<h2 class="col-4 offset-4"> <%= listing.title %></h2>
<div class="card col-4 offset-4" style="width: 23rem;">
  <img src="<%=listing.image%>" class="card-img-top" alt="listing image">
  <div class="card-body">
    <p class="card-text">
         
       <%= listing.description %> <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %>/Night <br>
       <%= listing.location %> <br>
        <%= listing.country %> <br>
    </p>
  </div>
  <div class="btns mt-3">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-3 offset-2">Edit</a>
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" >
        <button class="offset-4 btn btn-dark">Delete</button>
    </form>
  </div>
</div>

<div class="col-8 offset-2 mb-3">  
<hr>
  <h4>Leave A Comment</h4>
  <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
<div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
      <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
</div>

<div class="mb-3 mt-3">
  <label for="comment" class="form-label">Comment</label>
  <textarea name="review[comment]" 
          id="comment" 
          rows="5" 
          class="form-control" 
          required></textarea>

  <div class="valid-feedback">Thanks For Review</div>
  <div class="invalid-feedback">Please Add a Comment For Review </div>
</div>
<button class="btn btn-outline-dark">Submit</button>
  </form>
</div>
    </div>
